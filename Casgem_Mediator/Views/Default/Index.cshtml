@model List<Casgem_Mediator.MeditorPattern.Results.GetProductQueryResult>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">

    <a class="btn btn-success" href="/Default/AddProduct/">Ekle</a>

    <br />
    <br />

    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>Ürün</th>
            <th>Marka</th>
            <th>Kategori</th>
            <th>Stok</th>
            <th>Fiyat</th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var i in Model)
        {
            <tr>
                <th></th>
                <td>@i.ProductName</td>
                <td>@i.ProductBrand</td>
                <td>@i.ProductCategory</td>
                <td>@i.ProductStock</td>
                <td>@i.ProductPrice</td>
                <td>
                    <a class="btn btn-danger" href="/Default/DeleteProduct/@i.ProductId">Sil</a>
                </td>
                <td>
                    <a class="btn btn-warning" href="/Default/EditProduct/@i.ProductId">Güncelle</a>
                </td>
            </tr>
        }
    </table>

</div>
